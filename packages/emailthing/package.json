{
  "name": "emailthing",
  "version": "0.0.10",
  "description": "A web app for receiving and sending your emails!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RiskyMH/EmailThing.git",
    "directory": "packages/emailthing"
  },
  "keywords": ["cli", "sdk", "email"],
  "author": "RiskyMH (https://riskymh.dev)",
  "bugs": {
    "url": "https://github.com/RiskyMH/EmailThing/issues"
  },
  "bin": {
    "emailthing": "./dist/cli.js"
  },
  "type": "module",
  "exports": {
    "bun": "./src/sdk.ts",
    "types": "./src/sdk.ts",
    "import": "./dist/sdk.js"
  },
  "main": "./dist/sdk.js",
  "module": "./dist/sdk.js",
  "types": "./src/sdk.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && bun build src/sdk.ts --outdir dist --sourcemap && bun build src/cli.ts --outdir dist --target=bun --minify-syntax",
    "prepack": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "homepage": "https://emailthing.app/home",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@emailthing/cli": "workspace:^"
  }
}
