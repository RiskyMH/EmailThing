{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "next/link": ["./src/components/next-link.tsx"],
      "next/navigation": ["./src/components/next-pathname.tsx"],
      "@/(home)/components.client": ["./src/(home)/layout.tsx"],
      "@/*": ["./src/*"],
      // "@/components/*": ["./src/components/*", "../web/app/components/*"],
      "@/utils/limits": ["./src/utils/limits.ts", "../web/app/utils/limits.ts"]
    }
  }
}
