{
  "name": "@emailthing/cli",
  "version": "0.0.0-alpha.0",
  "type": "module",
  "bin": {
    "@emailthing/cli": "./dist/index.js",
    "emailthing": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "rm -rf dist && bun build src/index.ts src/main.ts src/agent.ts --outdir=dist --target=bun --format=esm --minify-syntax --splitting",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "prepack": "bun run build"
  },
  "devDependencies": {
    "@emailthing/const": "workspace:^",
    "@types/bun": "latest"
  },
  "files": [
    "dist"
  ]
}
