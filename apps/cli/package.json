{
  "name": "@emailthing/cli",
  "version": "0.0.0-alpha.0",
  "type": "module",
  "bin": {
    "@emailthing/cli": "./src/index.ts",
    "emailthing": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "agent": "bun run src/index.ts --agent",
    "agent:help": "bun run src/index.ts --agent --help",
    "logout": "bun run src/index.ts --logout",
    "build": "rm -rf dist && bun build src/index.ts src/main.ts src/agent.ts --outdir=dist --target=bun --format=esm --minify-syntax --splitting",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "prepack": "bun run build"
  },
  "devDependencies": {
    "@emailthing/const": "workspace:^",
    "@emailthing/cli": "workspace:^",
    "@types/bun": "latest"
  },
  "files": [
    "src"
  ]
}
