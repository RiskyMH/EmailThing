{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "space",
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "info",
				"useConsistentCurlyBraces": "off"
			},
			"suspicious": {
				"noExplicitAny": "info",
				"noArrayIndexKey": "info",
				"noConsoleLog": "warn"
			},
			"style": {
				"noNonNullAssertion": "info",
				"useCollapsedElseIf": "warn",
				"noUselessElse": "info"
			},
			"correctness": {
				"useExhaustiveDependencies": "info",
				"noUnusedImports": "info",
				"noUndeclaredDependencies": "warn"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"indentWidth": 2,
			"indentStyle": "space"
		}
	},
	"css": {
		"formatter": {
			"indentWidth": 2,
			"indentStyle": "space"
		}
	}
}